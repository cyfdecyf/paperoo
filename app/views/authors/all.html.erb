Quick navigation <input type="text" id="author_search_field" data-autocomplete="authors/autocomplete_author_name">

<table>
  <tr>
    <th>Name</th>
    <th>Institute</th>
    <th>Articles count</th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= link_to author.name, author %></td>
    <td><%= author.institute %></td>
    <td><%= author.articles_count %></td>
  </tr>
<% end %>
</table>

<%= paginate @authors, :params => { :controller => 'authors', :action => 'all' } %>

<br />

<%= link_to 'New Author', new_author_path %>
